@{
  ViewBag.Title = "USMT";
  Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<div class="row">
  <div class="col-xs-12">
    <form role="form" action="~/Computer/StartUSMT" method="post">
      <div class="form-group">
        <label for="computerName">Source IP Address</label>
        <input type="text" class="form-control" name="computerName" value="@ViewBag.ComputerName" />
      </div>
      <div class="form-group">
        <label for="user">User</label>
        <input type="text" class="form-control" name="user" />
      </div>
      <div class="form-group">
        <label for="targetIP">Target IP Address</label>
        <input type="text" class="form-control" name="targetIP" />
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>